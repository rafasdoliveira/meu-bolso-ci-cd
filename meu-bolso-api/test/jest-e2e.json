{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",

  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "collectCoverage": true,
  "coverageProvider": "v8",
  "coverageDirectory": "coverage",

  "coverageThreshold": {
    "global": {
      "statements": 50,
      "branches": 50,
      "functions": 50,
      "lines": 50
    }
  }
}
